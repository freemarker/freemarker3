<ivy-module version="2.0">
    <info organisation="org.visigoths" module="freemarker" revision="2.4">
        <license name="BSD-style" url="http://freemarker.org/docs/app_license.html" />
        <description homepage="http://freemarker.org/">
            FreeMarker is a &quot;template engine&quot;; a generic tool to generate text output (anything from HTML to autogenerated source code) based on templates.
        </description>
    </info>
    <configurations>
        <conf name="default" description="" />
        <conf name="build" extends="default" description="build FreeMarker"/>
        <conf name="build1.4" extends="build" description="build FreeMarker (JDK 1.4)"/>
        <conf name="parser" extends="default" description="generate parser"/>
        <conf name="manual" description="generate manual with docgen"/>
        <conf name="site" description="integrate website"/>
        <conf name="emma" description="generate EMMA reports"/>
    </configurations>
    <publications>
        <artifact name="freemarker" type="jar" conf="default" ext="jar"/>
    </publications>
    <dependencies>
        <!-- docs -->
        <dependency org="org.visigoths" name="docgen" rev="latest.integration" conf="manual->default" changing="true"/>
        
        <!-- website -->
        <dependency org="org.visigoths" name="freemarker-site" rev="latest.integration" conf="site->default" changing="true"/>
        
        <!-- EMMA -->
        <dependency org="emma" name="emma" rev="2.0.5312" conf="emma->default"/>
        <dependency org="emma" name="emma_ant" rev="2.0.5312" conf="emma->default"/>
        
        <!-- parser -->
        <dependency org="org.visigoths" name="freecc" rev="0.9.2" conf="parser->default"/>
        
        <!-- build -->
        <dependency org="junit" name="junit" rev="3.7" conf="build->default"/>
        <dependency org="ant" name="ant" rev="1.6.5" conf="build->default"/>
        <dependency org="org.visigoths" name="cavalry" rev="1.0" conf="build->default"/>
        <dependency org="javax.servlet.jsp" name="jsp-api" rev="1.2" conf="build->default"/>
        <dependency org="javax.servlet.jsp" name="jsp-api" rev="2.0" conf="build->default"/>
        <dependency org="javax.servlet.jsp" name="jsp-api" rev="2.1" conf="build->default"/>
        <dependency org="javax.servlet" name="servlet-api" rev="2.5" conf="build->default"/>
        <dependency org="jaxen" name="jaxen" rev="1.0-FCS" conf="build->default"/>
        <dependency org="org.jruby" name="jruby" rev="1.0" conf="build->default"/>
        <dependency org="org.python" name="jython" rev="2.2.1" conf="build->default"/>
        <dependency org="log4j" name="log4j" rev="1.2.6" conf="build->default"/>
        <dependency org="saxpath" name="saxpath" rev="1.0-FCS" conf="build->default"/>
        <dependency org="rhino" name="js" rev="1.6R1" conf="build->default"/>
        <dependency org="xalan" name="xalan" rev="2.7.0" conf="build->default"/>
        <dependency org="org.zeroturnaround" name="javarebel-sdk" rev="1.2.2" conf="build->default"/>
        
        <!-- build1.4 -->
        <dependency org="net.sf.retrotranslator" name="retrotranslator-runtime" rev="1.2.4" conf="build1.4->default"/>
        <dependency org="net.sf.retrotranslator" name="retrotranslator-transformer" rev="1.2.4" conf="build1.4->default"/>
        <dependency org="backport-util-concurrent" name="backport-util-concurrent" rev="3.1" conf="build1.4->default"/>

        <conflict org="javax.servlet.jsp" manager="all" />
    </dependencies>
</ivy-module>